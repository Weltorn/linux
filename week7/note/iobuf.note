fileopt:
//文件操作程序
	//创建静态库
  gcc -c mode.c
  gcc -c fileopt.c
  ar -rc libfileopt.a fileopt.o mode.o
	//创建动态库
	gcc -fPIC -c input.c
	gcc input.o -shared -fPIC -o libinput.so
	//链接生成可执行文件
	gcc -o fileopt main.c -L. -lfileopt ./libinput.so
	//remotetest
	gcc -o fileopt main.c -L../ -lfileopt ../libinput.so -I ../
